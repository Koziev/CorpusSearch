<Window x:Class="CorpusSearch.BusyWithIndexing"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CorpusSearch"
        mc:Ignorable="d"
        Height="200" Width="350" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"></RowDefinition>
            <RowDefinition Height="20*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label x:Name="label" Content="{Binding IndexingProgress}" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="41,25,41,25.4"/>
        <Button x:Name="button" Content="Cancel" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Width="75" Click="button_Click"/>

    </Grid>
</Window>
